{
  // general
  "window.zoomLevel": 0,
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "workbench.activityBar.visible": false,
  "window.menuBarVisibility": "hidden",
  "terminal.integrated.shell.linux": "/usr/bin/zsh",
  "terminal.integrated.cursorBlinking": true,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,

  // workbench
  "workbench.settings.editor": "json",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.list.automaticKeyboardNavigation": false,
  "workbench.colorCustomizations": {
    "editor.background": "#121212",
    "tab.activeBackground": "#121212",
    "editor.lineHighlightBackground": "#101000",
    "sideBar.background": "#1c1c1c",
    "editorRuler.foreground": "#000000",
    "statusBar.background": "#000000",
    "statusBar.noFolderBackground": "#000000",
    "statusBar.debuggingBackground": "#000000",
    "editor.selectionBackground": "#13aabe1e",
    "editor.wordHighlightBackground": "#1e3f5eb6",
    "editorLineNumber.foreground": "#444444",
    "editorError.foreground": "#121212",
    "editorWarning.foreground": "#121212",
    "editorInfo.foreground": "#121212",
    "editorCursor.foreground": "#00ffff",
    "terminalCursor.foreground": "#00ff7f"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.startupEditor": "newUntitledFile",
  "git.enabled": false,

  // screencast
  "screencastMode.fontSize": 25,
  "screencastMode.verticalOffset": 3,

  // editor
  "workbench.colorTheme": "Default Dark+",
  "editor.lineNumbers": "relative",
  "editor.fontSize": 17,
  "editor.fontLigatures": true,
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.scrollbar.horizontalScrollbarSize": 0,
  "editor.rulers": [80],
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 80,
  "debug.javascript.autoExpandGetters": true,
  "editor.detectIndentation": false,
  "editor.occurrencesHighlight": true,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "none",
  "eslint.codeActionsOnSave.mode": "problems",
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.fixAll.eslint": true
  },

  // vim configure
  "vim.easymotion": true,
  "vim.statusBarColorControl": true,
  "vim.cursorStylePerMode.visual": "underline",
  "vim.cursorStylePerMode.visualblock": "underline",
  "vim.cursorStylePerMode.visualline": "underline",
  "vim.cursorStylePerMode.replace": "underline-thin",
  "vim.statusBarColors.commandlineinprogress": "#000000",
  "vim.statusBarColors.normal": "#000000",
  "vim.statusBarColors.searchinprogressmode": "#000000",
  "vim.statusBarColors.insert": "#0000ff",
  "vim.statusBarColors.visualblock": "#000000",
  "vim.statusBarColors.visualline": "#000000",
  "vim.statusBarColors.visual": "#000000",
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": ["<C-t>"],
      "commands": [":tabnew"]
    },
    {
      "before": ["<C-q>"],
      "commands": [":q!"]
    },
    {
      "before": ["<C-s>"],
      "commands": [":update<CR>"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["<C-s"],
      "commands": ["<C-O>:update<CR><ESC>"]
    }
  ],

  // React Configure
  "editor.formatOnSave": true,
  "javascript.format.enable": false,
  "eslint.enable": false,
  "prettier.eslintIntegration": true,
  "eslint.autoFixOnSave": true,
  "files.associations": {
    "*.js": "javascriptreact"
  }
}
